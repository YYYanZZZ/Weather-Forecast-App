<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itme_center_tv_date"
        android:text="周六"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itme_center_tv_con"
        android:text="晴"
        android:textSize="16sp"
        android:layout_toRightOf="@id/itme_center_tv_date"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itme_center_tv_temp"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:text="9~-1℃"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/itme_center_iv"
        android:layout_toLeftOf="@id/itme_center_tv_temp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/sunny"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@id/itme_center_tv_date"
        android:layout_marginTop="5dp"/>
</RelativeLayout>